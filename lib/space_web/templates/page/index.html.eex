<script>
	window.userToken = "<%= Plug.Conn.get_session(@conn, :auth_token) %>";
	window.userId = "<%= Plug.Conn.get_session(@conn, :user_id) %>";
	window.username = "<%= Plug.Conn.get_session(@conn, :username) %>";
	window.defaultChannel = "25";
</script>




<h4>Current Room: <span id="interval"></span></h4>
<h3>New Image In...<span id="countdown"></span></h3>


<div class="parent">
	<div class="chat-header">
		<form id="interval-form" onsubmit="event.preventDefault()">
			<input id="interval-input" type="number" min="10" required placeholder="Enter a number">
			<button type="submit">Change Room</button>
		</form>
	</div>
	<div id="url" class="left-side "></div>
	<div class="chat-main">
		<div id="messages" role="log" aria-live="polite"></div>
		<form id="chat-form" onsubmit="event.preventDefault()" autocomplete="off">
			<input id="chat-input" type="text" placeholder="Enter message">
			<button type="submit">Submit</button>
		</form>
		<%# <div id="chat-inputs" class="input-cont">
			<input class="" id="chat-input" type="text"></input>
			<button id="enter-chat-btn" class="">submit</button>
		</div> %>
	</div>
	<div id="online-users" class="right-side "></div>
	<div id="explanation"></div>
</div>



<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- The Close Button -->
  <span class="close">&times;</span>

  <!-- Modal Content (The Image) -->
  <img class="modal-content" id="modal-img">


</div>

